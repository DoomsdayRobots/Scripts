#!/bin/bash
# This is an install for ROS noetic on a Linux Mint 21.1 system.

echo " "
echo "This is an install for ROS noetic on a Linux Mint 21.1 system. " 
echo " "

sudo apt-get install update

echo " "
echo " One line ROS install... "
echo " "
wget -c https://raw.githubusercontent.com/qboticslabs/ros_install_noetic/master/ros_uninstall_noetic.sh && chmod +x ./ros_uninstall_noetic.sh && ./ros_uninstall_noetic.sh

 
