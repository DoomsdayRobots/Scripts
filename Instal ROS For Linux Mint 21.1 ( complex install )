#!/bin/bash
# This is an install for ROS noetic on a Linux Mint 21.1 system.

echo " "
echo "This is an install for ROS noetic on a Linux Mint 21.1 system. " 
echo " "

sudo apt-get install update

echo " "
echo "1.1  Configure your Ubuntu repositories"
echo " "

echo " "
echo "1.2  Setup your computer to accept software from packages.ros.org." 
echo " "

sudo sh -c 'echo "deb http://packages.ros.org/ros/ubuntu $(lsb_release -sc) main" > /etc/apt/sources.list.d/ros-latest.list'



echo " "
echo "1.3  Set up your keys."
echo " "

sudo apt install curl # if you haven't already installed curl
curl -s https://raw.githubusercontent.com/ros/rosdistro/master/ros.asc | sudo apt-key add -




echo " "
echo "1.4  Instalation"
echo "First, make sure your Debian package index is up-to-date: "
echo " "

sudo apt update

echo " "
echo "Now pick how much of ROS you would like to install. By default we are going to do a full install."
echo " "
echo "Desktop-Full Install: (Recommended) : Everything in Desktop plus 2D/3D simulators and 2D/3D perception packages "
echo "    sudo apt install ros-noetic-desktop-full"
echo " "
echo "Desktop Install: Everything in ROS-Base plus tools like rqt and rviz"
echo "    sudo apt install ros-noetic-desktop"
echo " "
echo "ROS-Base: (Bare Bones) ROS packaging, build, and communication libraries. No GUI tools."
echo "    sudo apt install ros-noetic-ros-base"
echo " "
echo "There are even more packages available in ROS. You can always install a specific package directly. "
echo "    sudo apt install ros-noetic-PACKAGE"
echo "               eg "
echo " or "
echo "    sudo apt install ros-noetic-slam-gmapping "
echo "To find available packages, see ROS Index or use:  "
echo "  apt search ros-noetic"

sudo apt install ros-noetic-desktop-full





echo " "
echo "1.5 Environment setup"
echo "You must source this script in every bash terminal you use ROS in. "

source /opt/ros/noetic/setup.bash

echo "source /opt/ros/noetic/setup.bash" >> ~/.bashrc
source ~/.bashrc




echo " "
echo " 1.6 Dependencies for building packages"
echo "Up to now you have installed what you need to run the core ROS packages. To create and manage your own ROS"

echo "workspaces, there are various tools and requirements that are distributed separately. For example, rosinstall is a frequently" 

echo "used command-line tool that enables you to easily download many source trees for ROS packages with one command."

echo "To install this tool and other dependencies for building ROS packages, run:"
echo " "


 
